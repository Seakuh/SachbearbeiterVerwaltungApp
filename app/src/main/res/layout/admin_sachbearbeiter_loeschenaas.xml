<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moechten Sie den Sachbearbeiter "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/ausgewahlterLoescheSachbearbeiter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="wirklich loeschen?"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bestaetigenloeschenbuttonadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ja" />

    <Button
        android:id="@+id/abbrechenloeschenbuttonadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abbrechen" />


</LinearLayout>