<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fortbildung loeschen von:"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/einsetzenSachbearbeiter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="Fortbildung auswaehlen"
        android:textSize="25dp" />

    <ListView
        android:id="@+id/listviewZuordnungLoeschen"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:background="@drawable/bg_key"
        android:transitionName="listviewZuordnung" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/radioButtonVersehen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="versehentliche Zuweisung "
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="107dp" />

    <Button
        android:id="@+id/buttonBesteatigen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bestaetigen" />

    <Button
        android:id="@+id/buttonAbbruchFortbildungLoeschen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abbruch" />

</LinearLayout>